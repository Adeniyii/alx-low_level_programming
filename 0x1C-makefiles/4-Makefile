.PHONE: all link clean oclean fclean re

CC = gcc
SRC = main.c school.c
OBJ = $(SRC:%.c=%.o)
NAME = school
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic

all: link

%.o: %.c
	${CC} -c $< -o $@ ${CFLAGS}

link:
	${CC} $(OBJ) -o ${NAME} ${CFLAGS}

# delete exe, vim and emacs temp files
clean:
	${RM} ${NAME} *~ \#* *#

# delete object files
oclean:
	${RM} $(OBJ)

fclean: clean oclean

# force recompilation
re: fclean all
